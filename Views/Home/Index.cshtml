@model IEnumerable<ProjectECommerce.Models.DB.Product>

<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="container">
    <div class="row">
        <div id="imageCarousel" class="carousel slide" data-interval="2000"
             data-ride="carousel" data-pause="hover" data-wrap="true">

            <ol class="carousel-indicators">
                <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#imageCarousel" data-slide-to="1"></li>
                <li data-target="#imageCarousel" data-slide-to="2"></li>

            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/c.jpeg" class="img-responsive w-100%">
                    <div class="carousel-caption">
                    </div>

                </div>
                <div class="item">
                    <img src="~/images/c.jpeg" class="img-responsive h-200; w-100">
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="~/images/c.jpeg" class="img-responsive h-200; w-100">
                    <div class="carousel-caption">

                    </div>
                </div>

            </div>

            <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                <span class="glyphicon glyphicon-hand-left"></span>
            </a>
            <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                <span class="glyphicon glyphicon-hand-right"></span>
            </a>
        </div>

    </div>

    <div style="padding:0px 10%;">


        <!-- Start Small Banner  -->
        <section class="small-banner section">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-sm-4">
                        <div class="single-banner">
                            <img src="~/images/55.jpg" alt="#" class="img-responsive">
                            <div class="content">
                                <p>Man's Collectons</p>
                                <h3>Summer travel <br> collection</h3>

                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="single-banner">
                            <img src="~/images/new1.jpg" alt="#" class="img-responsive">
                            <div class="content">
                                <p>Woman Collectons</p>
                                <h3>Awesome Collection <br> 2020</h3>

                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-12">
                        <div class="single-banner tab-height">
                            <img src="~/images/new2.jpg" alt="#" class="img-responsive">
                            <div class="content">
                                <p>Kids Collection</p>
                                <h3>Mid Season <br> Up to <span>40%</span> Off</h3>

                            </div>
                        </div>
                    </div>
                    <!-- /End Single Banner  -->
                </div>
            </div>
        </section>

        <div class="product-area section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h2>Trending Item</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="product-info">

                            <div class="tab-content" id="myTabContent">
                                <!-- Start Single Tab -->
                                <div class="tab-pane fade show active" id="man" role="tabpanel">
                                    <div class="tab-single">
                                        <div class="row">

                                            @foreach (var productDetails in Model)
                                            {
                                                <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                    <div class="single-product">
                                                        <div class="product-img" style="min-height:300px;min-width:250px;max-height:300px;max-width:250px">
                                                            <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@productDetails.Id">
                                                                <img class="default-img" src="@productDetails.ImagePath" alt="#">
                                                                <img class="hover-img" src="@productDetails.ImagePath" alt="#">
                                                            </a>
                                                            <div class="button-head">

                                                                <div class="product-action-2">
                                                                    <a title="Add to cart" asp-controller="Cart" asp-action="ManageQuantity" asp-route-id="@productDetails.Id" asp-route-quantity="1">Add to cart</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="product-content">
                                                            <h3><a style="color:black" asp-controller="Product" asp-action="ProductDetails" asp-route-id="@productDetails.Id">@productDetails.Name</a></h3>
                                                            <div class="product-price">
                                                                <span style="color:black">@productDetails.Price ر.ع.</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <!--/ End Single Tab -->
                                <!-- Start Most Popular -->
                                <!-- End Most Popular Area -->


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="product-area most-popular section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h2>Hot Item</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="owl-carousel popular-slider">
                            <!-- Start Single Product -->
                            <div class="single-product">
                                <div class="product-img">
                                    <a href="product-details.html">
                                        <img class="default-img" src="~/images/products/g13.jpg" alt="#">
                                    </a>
                                </div>
                            </div>
                            <!-- End Single Product -->
                            <!-- Start Single Product -->
                            <div class="single-product">
                                <div class="product-img">
                                    <a href="product-details.html">
                                        <img class="default-img" src="~/images/products/g16.jpg" alt="#">
                                    </a>

                                </div>

                            </div>
                            <!-- End Single Product -->
                            <!-- Start Single Product -->
                            <div class="single-product">
                                <div class="product-img">
                                    <a href="product-details.html">
                                        <img class="default-img" src="~/images/products/k1.jpg" alt="#">
                                    </a>

                                </div>

                            </div>
                            <!-- End Single Product -->
                            <!-- Start Single Product -->
                            <div class="single-product">
                                <div class="product-img">
                                    <a href="product-details.html">
                                        <img class="default-img" src="~/images/products/n20.jpg" alt="#">
                                    </a>
                                </div>
                            </div>
                            <!-- End Single Product -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



