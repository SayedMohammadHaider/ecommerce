@model ProjectECommerce.Models.DB.User

<div class="well" style="font-size:20px; background-color: #F7941D; border-color: #F7941D;padding:19px;border-radius:4px">User Profile</div>
<br />
<div class="row gutters-sm">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="180">
                    <div class="mt-3">
                        <h4>@Model.Name</h4>
                        <p class="text-secondary mb-1">@Model.Designation</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.Name
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.EmailId
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.MobileNumber
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Date Of Birth</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.DateOfBirth
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Your Orders</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <a asp-controller="Order" asp-action="Index">View All Orders</a>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Your Addresses</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <a asp-controller="Address" asp-action="Index">View All Address</a>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Your Cart</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <a asp-controller="Cart" asp-action="Index">View Your Cart</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row gutters-sm">


        </div>
    </div>
</div>
