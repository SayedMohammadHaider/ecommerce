<!-- Eshop StyleSheet -->
<link rel="stylesheet" href="~/css/reset.css">
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="~/css/responsive.css">
<div class="container">
    <div class="well" style="font-size:20px; background-color: #F7941D; border-color: #F7941D">@Model.CategoryName</div>

    @foreach (var productList in Model.Products)
    {
        <div class="col-xl-3 col-lg-4 col-md-4 col-12">
            <div class="single-product">
                <div class="product-img" style="min-height:300px;min-width:250px;max-height:300px;max-width:250px">
                    <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@productList.Id">
                        <img class="default-img" src="@productList.ImagePath" alt="#">
                        <img class="hover-img" src="@productList.ImagePath" alt="#">
                    </a>
                    <div class="button-head">

                        <div class="product-action-2">
                            <a title="Add to cart" asp-controller="Cart" asp-action="ManageQuantity" asp-route-id="@productList.Id" asp-route-quantity="1">Add to cart</a>
                        </div>
                    </div>
                </div>
                <div class="product-content">
                    <h3><a style="color:black" asp-controller="Product" asp-action="ProductDetails" asp-route-id="@productList.Id">@productList.Name</a></h3>
                    <div class="product-price">
                        <span style="color:black">ر.ع.@productList.Price</span>
                    </div>
                </div>
            </div>
        </div>

    }
</div>