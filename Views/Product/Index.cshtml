@foreach (var productList in Model)
{
    <div class="col-xl-3 col-lg-4 col-md-4 col-12">
        <div class="single-product">
            <div class="product-img">
                <a asp-action="ProductDetails">
                    <img class="default-img" src="@productList.ImagePath" alt="#">
                    <img class="hover-img" src="@productList.ImagePath" alt="#">
                </a>
                <div class="button-head">

                    <div class="product-action-2">
                        <a title="Add to cart" href="#">Add to cart</a>
                    </div>
                </div>
            </div>
            <div class="product-content">
                <h3><a href="product-details.html">@productList.Name</a></h3>
                <div class="product-price">
                    <span>$@productList.Price</span>
                </div>
            </div>
        </div>
    </div>
}

<!--end Kids Product List-->
