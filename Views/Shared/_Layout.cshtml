<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="header shop">
        <div class="header-inner" style="max-height:60px !important;">
            <div class="container">
                <div class="cat-nav-head">
                    <div class="row">
                        <div class="col-lg-1" style="padding-top:20px">
                            <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="logo"></a>
                        </div>
                        <div class="col-lg-11 col-12">
                            <div class="menu-area">
                                <!-- Main Menu -->
                                <nav class="navbar navbar-expand-lg">
                                    <div class="navbar-collapse">
                                        <div class="nav-inner">
                                            @await Component.InvokeAsync("Category")

                                        </div>
                                    </div>
                                </nav>
                                <!--/ End Main Menu -->
                                <!--</div>
                                </div>-->
                            </div>
                        </div>
                    </div>
                    @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" asp-append-version="true"></a>*@
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                </div>
            </div>
            <!--/ End Header Inner -->
        </div>
    </header>

    <div class="container" style="padding-top:1px;">
        <main role="main" class="pb-3 mainClass" style="padding:0px 10%;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="z-index:999;position:relative;bottom:0">
        <div class="container">
            &copy; 2021 - E-Commerce - <a asp-area="" asp-controller="Home" asp-action="Home">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="~/css/responsive.css">

<style type="text/css">
    .container {
        padding: 0px;
        min-width: 98%;
    }
</style>
